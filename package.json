{
  "name": "cloudflare-rag-portfolio",
  "version": "0.1.0",
  "description": "Professional portfolio demonstrating RAG patterns on Cloudflare Workers AI",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "cf-typegen": "wrangler types",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:migrate": "wrangler d1 migrations apply wikipedia-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply wikipedia-db --remote",
    "db:create-migration": "wrangler d1 migrations create wikipedia-db",
    "vectorize:create": "wrangler vectorize create wikipedia-vectors --preset @cf/baai/bge-base-en-v1.5",
    "r2:create": "wrangler r2 bucket create wikipedia-articles",
    "ui:dev": "cd ui && npm run dev",
    "ui:build": "cd ui && npm run build",
    "fetch-data": "python scripts/fetch-wikipedia.py --size-mb 10",
    "fetch-data:quick": "python scripts/fetch-wikipedia.py --size-mb 5",
    "fetch-data:large": "python scripts/fetch-wikipedia.py --size-mb 20",
    "ingest": "node scripts/ingest-wikipedia.js"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "ai",
    "rag",
    "retrieval-augmented-generation",
    "vectorize",
    "d1",
    "r2",
    "portfolio"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "@cloudflare/workers-types": "^4.20251209.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.53.0"
  },
  "dependencies": {
    "@langchain/textsplitters": "^1.0.1",
    "hono": "^4.6.14"
  }
}
